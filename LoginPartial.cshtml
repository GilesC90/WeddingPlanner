@model LoginUser;
<div class="row">
    <form asp-action="Login">
        <div class="form-group mb-2">
            <span asp-validation-for="LogEmail" class="text-danger col-8 offset-4"></span>
            <label asp-for="LogEmail" class="col-4"></label>
            <div class="col-8">
                <input asp-for="LogEmail" class="form-control">
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="LogPassword" class="text-danger col-8 offset-4"></span>
            <label asp-for="LogPassword" class="col-4"></label>
            <div class="col-8">
                <input asp-for="LogPassword" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="col-4 offset-4 btn btn-outline-primary">
        </div>
    </form>
</div>