@model User;
<div class="d-flex row">
    <form asp-action="Register">
        <div class="form-group mb-2">
            <span asp-validation-for="FirstName" class="text-danger col-8 offset-4"></span>
            <label asp-for="FirstName" class="col-4"></label>
            <div class="col-8">
                <input asp-for="FirstName" class="form-control">
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="LastName" class="text-danger col-8 offset-4"></span>
            <label asp-for="LastName" class="col-4"></label>
            <div class="col-8">
                <input asp-for="LastName" class="form-control">
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="Email" class="text-danger col-8 offset-4"></span>
            <label asp-for="Email" class="col-4"></label>
            <div class="col-8">
                <input asp-for="Email" class="form-control">
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="Password" class="text-danger col-8 offset-4"></span>
            <label asp-for="Password" class="col-4"></label>
            <div class="col-8">
                <input asp-for="Password" class="form-control">
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="Confirm" class="text-danger col-8 offset-4"></span>
            <label asp-for="Confirm" class="col-4"></label>
            <div class="col-8">
                <input asp-for="Confirm" class="form-control">
            </div>
        </div>
        <div class="form-group align-left">
            <input type="submit" value="Register" class="col-4 offset-4 btn btn-outline-primary">
        </div>
    </form>
</div>